generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role
  createdAt DateTime  @default(now())
  borrowEvents BorrowEvent[]
}

model Book {
  id        Int       @id @default(autoincrement())
  title     String
  author    String
  genre     String
  status    BookStatus @default(available)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?  // <-- Soft delete column added
  borrowEvents BorrowEvent[]

  // Indexes to improve query performance
  @@index([status])
  @@index([createdAt])
  @@index([deletedAt])

}

model BorrowEvent {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     Int
  borrowedAt DateTime @default(now())

  // Indexes to speed up joins / filtering
  @@index([userId])
  @@index([bookId])

}

enum Role {
  admin
  user
}

enum BookStatus {
  available
  borrowed
}
